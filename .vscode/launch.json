{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "chessington/ui/app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        },
        {
            "name": "Python: File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "justMyCode": true
        },
        {
            "name": "Python: Current File",
            "comment": "Needed to run 'Debug Tests' from the Testing Sidebar; see https://github.com/microsoft/vscode-python/issues/10847",
            "type": "python",
            "request": "test", 
            "console": "integratedTerminal"
        }
    ]
}